{
  "$schema": "https://json.schemastore.org/tsconfig.json",

  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "rootDir": "./",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "noResolve": false,

    "paths": {
      "~/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "alwaysStrict": true,
    "declaration": false,

    "importHelpers": true,
    "outDir": "dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "./tests/**/*"]
}
